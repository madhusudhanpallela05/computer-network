#include <stdio.h>

int main() {
    int d[100], p[25], t[120], r[25];
    int n, m, i, j;

    printf("Enter number of data bits: ");
    scanf("%d", &n);

    printf("Enter data bits: ");
    for (i = 0; i < n; i++)
        scanf("%d", &d[i]);

    printf("Enter number of divisor bits: ");
    scanf("%d", &m);

    printf("Enter divisor bits: ");
    for (i = 0; i < m; i++)
        scanf("%d", &p[i]);

    for (i = 0; i < n + m - 1; i++)
        t[i] = (i < n) ? d[i] : 0;

    for (i = 0; i < n; i++) {
        if (t[i] == 1) {
            for (j = 0; j < m; j++)
                t[i + j] ^= p[j];
        }
    }

    printf("\nCRC-CCITT bits: ");
    for (i = 0; i < m - 1; i++) {
        r[i] = t[n + i];
        printf("%d", r[i]);
    }

    printf("\nTransmitted frame: ");
    for (i = 0; i < n; i++)
        printf("%d", d[i]);
    for (i = 0; i < m - 1; i++)
        printf("%d", r[i]);

    return 0;
}
